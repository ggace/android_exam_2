<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <import type="com.example.sbs.myapplication.Pokemon" />
        <variable
            name="pokemon"
            type="Pokemon" />

    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.DetailActivity"
        android:orientation="vertical"
        android:id="@+id/activity_detail">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{`번호 : ` + pokemon.id}"
            android:textSize="25sp"
            android:padding="5sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{`이름 : ` + pokemon.name}"
            android:textSize="25sp"
            android:padding="5sp"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                app:imgUrl="@{pokemon.imgUrl}"
                android:id="@+id/activity_detail__imageViewPokemon"
                android:layout_width="0sp"
                android:layout_height="0sp"
                android:scaleType="centerCrop"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:id="@+id/activity_detail__item__recyclerView" ></androidx.recyclerview.widget.RecyclerView>



    </LinearLayout>

</layout>
